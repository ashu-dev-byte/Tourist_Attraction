<%- include("../partials/header") %>

<div class="container">
  <div class="row justify-content-center align-items-center">
    <div class="col-12 col-md-6 justify-content-center align-items-center">
      <h1
        style="
          font-size: 48px;
          margin: 25px 0px;
          text-align: center;
          color: rgb(255, 166, 0);
        "
      >
        Edit <%= foundSpot.name %>
      </h1>

      <form
        action="/touristspots/<%= foundSpot._id %>?_method=PUT"
        method="POST"
      >
        <div class="form-group">
          <label for="spot[name]">Edit Name: </label>
          <input
            class="form-control"
            type="text"
            name="spot[name]"
            maxlength="35"
            autocomplete="off"
            value="<%= foundSpot.name %>"
          />
          <span style="margin-left: 10px; font-size: 14.5px; color: olive;"
            >Max limit : 35 characters</span
          >
        </div>
        <div class="form-group">
          <label for="spot[city]">Edit City:</label>
          <input
            class="form-control"
            type="text"
            name="spot[city]"
            maxlength="35"
            autocomplete="off"
            value="<%= foundSpot.city %>"
          />
          <span style="margin-left: 10px; font-size: 14.5px; color: olive;"
            >Max limit : 35 characters</span
          >
        </div>
        <div class="form-group">
          <label for="spot[imageURL]">Edit Image URL:</label>
          <input
            class="form-control"
            type="text"
            name="spot[imageURL]"
            autocomplete="off"
            value="<%= foundSpot.imageURL %>"
          />
        </div>
        <div class="form-group">
          <label for="spot[description]">Edit Description:</label>
          <textarea
            class="form-control"
            name="spot[description]"
            autocomplete="off"
            style="height: 125px;"
          >
<%= foundSpot.description %></textarea
          >
        </div>
        <div class="form-group">
          <button class="btn-lg btn-primary btn-block">Submit</button>
        </div>
      </form>

      <div
        class="row justify-content-center align-items-center"
        style="margin: 12px auto;"
      >
        <a class="btn btn-danger" href="/touristspots">Go Back</a>
      </div>
    </div>
  </div>
</div>

<%- include("../partials/footer") %>
