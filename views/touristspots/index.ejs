<%- include("../partials/header") %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome to Exploration Point!</h1>
      <p>
        View the handpicked locations from the posts of our various users and
        see whose explorations matches with yours.
      </p>
      <p>
        <a class="btn btn-lg btn-warning" href="/touristspots/new">
          Add New Exploration Point
        </a>
      </p>
    </div>
  </header>

  <div class="row">
    <div class="col-lg-12">
      <h3>Our Most Popular Destinations</h3>
    </div>

    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
      <% tspots.forEach((tspot) => { %>
      <div class="col-lg-3 col-md-4 col-sm-6">
        <div class="card" style="height: 345px; width: 285px; margin: 10px;">
          <img
            class="card-img-top"
            src="<%= tspot.imageURL %>"
            style="
              height: 58.5%;
              object-fit: cover;
              padding: 3px;
              border-radius: 5px;
            "
          />
          <div class="card-body">
            <h4 class="card-title"><%= tspot.name %></h4>
            <p
              class="card-text text-center"
              style="
                color: dodgerblue;
                font-size: 16.6px;
                font-weight: bold;
                font-style: italic;
                margin-top: -10px;
              "
            >
              <%= tspot.city %>
            </p>
            <a
              href="/touristspots/<%= tspot._id %>"
              class="btn btn-warning btn-block"
              style="position: absolute; width: 85%; bottom: 15px;"
              >More info</a
            >
          </div>
        </div>
      </div>
      <%}); %>
    </div>
  </div>
</div>

<%- include("../partials/footer") %>
