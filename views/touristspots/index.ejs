<%- include("../partials/header") %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome to Exploration Point!</h1>
      <p>
        View the handpicked locations from the posts of our various users and
        see whose explorations matches with yours.
      </p>
      <p>
        <a class="btn btn-lg btn-success" href="/touristspots/new">
          Add Exploration Point
        </a>
      </p>
    </div>
  </header>

  <div class="row">
    <div class="col-lg-12">
      <h3 style="text-align: center; font-size: 38px; margin-bottom: 30px;">
        Our Most Popular Destinations
      </h3>
    </div>

    <div
      class="row text-center"
      style="display: flex; flex-wrap: wrap; justify-content: space-around;"
    >
      <% tspots.forEach((tspot) => { %>

      <div
        class="card index-card"
        style="
          height: 355px;
          width: 82.5%;
          margin: 10px;
          background-color: #f7f7f7;
        "
      >
        <img
          class="card-img-top"
          src="<%= tspot.imageURL %>"
          style="height: 58.5%; object-fit: cover;"
        />
        <div class="card-body">
          <h4 class="card-title"><%= tspot.name %></h4>
          <p
            class="card-text text-center"
            style="
              color: dodgerblue;
              font-size: 16.6px;
              font-weight: bold;
              font-style: italic;
              margin-top: -10px;
            "
          >
            <%= tspot.city %>
          </p>
          <a
            href="/touristspots/<%= tspot._id %>"
            class="btn btn-warning btn-block"
            style="position: absolute; width: 85%; bottom: 15px;"
            >More info</a
          >
        </div>
      </div>

      <%}); %> <% if(noMatch !== null) { %>
      <div class="container" style="margin: 1px 30px 350px 30px;">
        <h3 style="color: rgb(247, 78, 48);"><%= noMatch %></h3>
      </div>
      <% } %>
    </div>
    <% if(checkQuery) { %>
    <div
      class="container"
      style="
        display: flex;
        justify-content: space-around;
        margin: 20px auto 40px auto;
      "
    >
      <a href="/touristSpots" class="btn btn-lg btn-primary">Go Back</a>
    </div>
    <% } %>
  </div>

  <nav aria-label="Page navigation" style="margin: 200px auto 35px auto;">
    <% if (pages && pages > 0) { %>
    <ul class="pagination justify-content-center">
      <% if (current == 1) { %>
      <li class="page-item active"><a class="page-link">First</a></li>
      <% } else { %>
      <li><a class="page-link" href="/touristSpots">First</a></li>
      <% } %> <% if (current == 1) { %>
      <li class="page-item disabled"><a class="page-link">«</a></li>
      <% } else { %>
      <li>
        <a
          class="page-link"
          href="/touristSpots?page=<%= Number(current) - 1 %><%if(search){%>&search=<%=search%><%}%>"
          >«</a
        >
      </li>
      <% } %> <% let i = (Number(current) > 5 ? Number(current) - 4 : 1) %> <%
      if (i !== 1) { %>
      <li class="page-item disabled"><a class="page-link">...</a></li>
      <% } %> <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %> <%
      if (i == current) { %>
      <li class="page-item active"><a class="page-link"><%= i %></a></li>
      <% } else { %>
      <li>
        <a
          class="page-link"
          href="/touristSpots?page=<%= i %><%if(search){%>&search=<%=search%><%}%>"
          ><%= i %></a
        >
      </li>
      <% } %> <% if (i == Number(current) + 4 && i < pages) { %>
      <li class="page-item disabled"><a class="page-link">...</a></li>
      <% } %> <% } %> <% if (current == pages) { %>
      <li class="page-item disabled"><a class="page-link">»</a></li>
      <% } else { %>
      <li>
        <a
          class="page-link"
          href="/touristSpots?page=<%= Number(current) + 1 %><%if(search){%>&search=<%=search%><%}%>"
          >»</a
        >
      </li>
      <% } %> <% if (current == pages) { %>
      <li class="page-item active"><a class="page-link">Last</a></li>
      <% } else { %>
      <li>
        <a
          class="page-link"
          href="/touristSpots?page=<%= pages %><%if(search){%>&search=<%=search%><%}%>"
          >Last</a
        >
      </li>
      <% } %>
    </ul>
    <% } %>
  </nav>
</div>

<%- include("../partials/footer") %>
