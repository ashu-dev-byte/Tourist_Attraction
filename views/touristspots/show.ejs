<%- include("../partials/header.ejs") %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome to Exploration Point!</h1>
      <p>
        View the handpicked locations from the posts of our various users and
        see whose explorations matches with yours.
      </p>
      <p>
        <a
          class="btn btn-lg btn-warning"
          href="/touristspots/new"
          style="margin-top: 10px;"
        >
          Add New Tourist Spot
        </a>
        <a
          class="btn btn-lg btn-primary"
          href="/touristspots"
          style="margin-top: 10px;"
          >View Tourist Spots</a
        >
      </p>
    </div>
  </header>
</div>

<div class="conatiner">
  <div class="container">
    <div class="row">
      <div class="col-md-9">
        <div class="card">
          <img
            class="card-img-top"
            src="<%= specificSpot.imageURL %>"
            style="object-fit: cover; padding: 3px; border-radius: 5px;"
          />
          <div class="card-body">
            <h4 class="float-right">â‚¹350.00/day</h4>
            <h4 class="card-title"><%= specificSpot.name %></h4>
            <p
              class="card-text"
              style="
                color: dodgerblue;
                font-size: 16.6px;
                font-weight: bold;
                font-style: italic;
                margin-top: -10px;
              "
            >
              <%= specificSpot.city %>
            </p>
            <p class="card-text"><%= specificSpot.description %></p>
          </div>
        </div>
        <div class="card bg-light" style="margin-top: 2em;">
          <div class="card-body">
            <a
              class="btn btn-success float-right"
              style="width: 205px; font-size: 18px; font-weight: bold;"
              href="/touristspots/<%= specificSpot._id %>/comments/new"
              >Leave Review</a
            >
            <br /><br /><br /><br />

            <% specificSpot.comments.forEach((comment) => { %>
            <div class="row">
              <div class="col-md-12">
                <span class="float-right">7 days ago</span>
                <strong style="color: #cc5500; font-size: 18px;"
                  ><%= comment.author %>:</strong
                >
                <p><%= comment.text %></p>
              </div>
            </div>
            <% }) %>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <p class="lead" style="font-size: 1.8em;">Exploration Point</p>
        <div class="list-group" style="width: 100%;">
          <li class="list-group-item active" style="cursor: pointer;">
            Info 1
          </li>
          <li class="list-group-item" style="cursor: pointer;">Info 2</li>
          <li class="list-group-item" style="cursor: pointer;">Info 3</li>
        </div>
      </div>
    </div>
  </div>
</div>

