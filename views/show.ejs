<%- include("./partials/header.ejs") %>

<div class="continer">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome to Exploration Point!</h1>
      <p>View our handpicked Tourist Locations from all over the world.</p>
      <p>
        <a
          class="btn btn-lg btn-warning"
          href="/touristspots/new"
          style="margin-top: 10px;"
        >
          Add New Tourist Spot
        </a>
        <a
          class="btn btn-lg btn-primary"
          href="/touristspots"
          style="margin-top: 10px;"
          >View Tourist Spots</a
        >
      </p>
    </div>
  </header>

  <div class="row">
    <div class="col-12">
      <h4 style="text-align: center;">
        <strong><%= specificSpot.name %></strong>,
        <span style="color: rgba(255, 123, 0, 0.945); font-weight: normal;">
          <%= specificSpot.city %>
        </span>
      </h4>
    </div>
    <div class="col-12">
      <img
        src="<%= specificSpot.imageURL %>"
        style="
          width: 50%;
          object-fit: cover;
          padding: 3px;
          border-radius: 5px;
          display: block;
          margin: auto;
        "
      />
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <p style="text-align: justify; margin: 7.5% 13.5%;">
        <%= specificSpot.description %>
      </p>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <% specificSpot.comments.forEach((comment) => { %>
      <h5 style="position: relative; left: 10%;">Comment:</h5>
      <p style="position: relative; left: 10%;">
        <strong><%= comment.author %></strong> - <%= comment.text%>
      </p>
      <% }) %>
    </div>
  </div>

  <%- include("./partials/footer.ejs") %>
</div>
