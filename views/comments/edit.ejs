<%- include("../partials/header") %>

<div class="container">
  <div class="row justify-content-center align-items-center">
    <div class="col-12 col-md-6 justify-content-center align-items-center">
      <h1
        style="
          font-size: 48px;
          margin: 25px 0px;
          text-align: center;
          color: rgb(255, 166, 0);
        "
      >
        Edit Comment to <%= specificSpot.name %>
      </h1>

      <form
        action="/touristspots/<%= specificSpot._id %>/comments/<%= gotComment._id %>?_method=PUT"
        method="POST"
      >
        <div class="form-group">
          <label for="comment[text]">Edit Comment:</label>
          <textarea
            class="form-control"
            name="comment[text]"
            autocomplete="off"
            style="height: 125px;"
          >
<%= gotComment.text %></textarea
          >
        </div>
        <div class="form-group">
          <button class="btn-lg btn-primary btn-block">Submit</button>
        </div>
      </form>

      <div
        class="row justify-content-center align-items-center"
        style="margin: 12px auto;"
      >
        <a class="btn btn-danger" href="/touristspots/<%= specificSpot._id %>"
          >Go Back</a
        >
      </div>
    </div>
  </div>
</div>

<%- include("../partials/footer") %>
