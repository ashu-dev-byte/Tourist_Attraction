<%- include("../partials/header") %>

<div class="container">
  <div class="row justify-content-center align-items-center">
    <div class="col-12 col-md-6 justify-content-center align-items-center">
      <h1
        style="
          font-size: 48px;
          margin: 25px 0px;
          text-align: center;
          color: rgb(255, 166, 0);
        "
      >
        Add Comment to <%= specificSpot.name %>
      </h1>

      <form
        action="/touristspots/<%= specificSpot._id %>/comments"
        method="POST"
      >
        <!-- <div class="form-group">
          <label for="comment[author]">Enter Your Name: </label>
          <input
            class="form-control"
            type="text"
            name="comment[author]"
            required
            maxlength="35"
            autocomplete="off"
          />
          <span style="margin-left: 10px; font-size: 14.5px; color: gainsboro;"
            >Max limit : 35 characters</span
          >
        </div> -->

        <div class="form-group">
          <label for="comment[text]">Enter Comment:</label>
          <textarea
            class="form-control"
            name="comment[text]"
            autocomplete="off"
            style="height: 125px;"
          ></textarea>
        </div>
        <div class="form-group">
          <button class="btn-lg btn-primary btn-block">Submit</button>
        </div>
      </form>

      <div
        class="row justify-content-center align-items-center"
        style="margin: 12px auto;"
      >
        <a class="btn btn-danger" href="/touristspots/<%= specificSpot._id %>"
          >Go Back</a
        >
      </div>
    </div>
  </div>
</div>

<%- include("../partials/footer") %>
