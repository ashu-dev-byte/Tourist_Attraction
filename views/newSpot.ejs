<%- include("./partials/header") %>

<div class="container">
  <div class="row justify-content-center align-items-center">
    <div class="col-12 col-md-6 justify-content-center align-items-center">
      <h1
        style="
          font-size: 48px;
          margin: 25px 0px;
          text-align: center;
          color: rgb(255, 166, 0);
        "
      >
        Create a new Exploration Point
      </h1>

      <form action="/touristspots" method="POST">
        <div class="form-group">
          <label for="name">Enter Name: </label>
          <input
            class="form-control"
            type="text"
            name="name"
            maxlength="35"
            autocomplete="off"
          />
          <span style="margin-left: 10px; font-size: 14.5px; color: gainsboro;"
            >Max limit : 35 characters</span
          >
        </div>
        <div class="form-group">
          <label for="city">Enter City:</label>
          <input
            class="form-control"
            type="text"
            name="city"
            maxlength="35"
            autocomplete="off"
          />
        </div>
        <div class="form-group">
          <label for="imageURL">Enter Image URL:</label>
          <input
            class="form-control"
            type="text"
            name="imageURL"
            autocomplete="off"
          />
        </div>
        <div class="form-group">
          <label for="description">Enter Description:</label>
          <textarea
            class="form-control"
            name="description"
            autocomplete="off"
            style="height: 125px;"
          ></textarea>
        </div>
        <div class="form-group">
          <button class="btn-lg btn-primary btn-block">Submit</button>
        </div>
      </form>

      <div
        class="row justify-content-center align-items-center"
        style="margin: 12px auto;"
      >
        <a class="btn btn-danger" href="/touristspots">Go Back</a>
      </div>
    </div>
  </div>
</div>

<%- include("./partials/footer") %>
